<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:minWidth="300dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 추천 도서"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- 책 표지 -->
        <ImageView
            android:id="@+id/iv_ai_cover"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_marginBottom="16dp"/>

        <!-- 책 제목 -->
        <TextView
            android:id="@+id/tv_ai_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="책 제목"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_primary"
            android:layout_marginBottom="4dp"/>

        <!-- 저자 -->
        <TextView
            android:id="@+id/tv_ai_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저자 이름"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp"/>

        <!-- 줄거리 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 이유 / 줄거리"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_ai_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="줄거리 정보가 없습니다."
            android:background="#F5F5F5"
            android:padding="12dp"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- 더보기 버튼 -->
        <TextView
            android:id="@+id/tv_ai_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기 ▼"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_gravity="end"
            android:padding="8dp"
            android:visibility="gone"/>

        <!-- 찜하기 버튼만 존재 (별점 입력 X) -->
        <!-- 버튼은 Java 코드에서 AlertDialog의 setPositiveButton으로 생성됨 -->

    </LinearLayout>
</ScrollView>